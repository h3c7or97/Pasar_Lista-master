<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="?attr/colorPrimary">
    <TextView
            android:text="Estudiantes:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:textSize="18sp"
            android:textColor="#FDFCFC"/>
    <Button
            android:text="Cargar Lista Estudiantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btncargar" android:layout_marginLeft="44dp" android:layout_marginStart="44dp"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp" android:textSize="14sp"
            style="@android:style/Widget.Material.Light.Button.Inset"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="397dp"
            android:layout_height="502dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btncargar" android:id="@+id/recycleestudiante"
            android:layout_marginTop="32dp" android:background="#00F8F7F7"/>

</androidx.constraintlayout.widget.ConstraintLayout>